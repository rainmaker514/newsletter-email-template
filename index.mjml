        .link {
          font-size: 10px !important;
        }
      }

      @media(min-width: 425px) {
        .link {
          padding: 0 16px 0 16px !important;
        }
      }

      @media(min-width: 768px) {
        .link {
          padding: 0 30px 0 30px !important;
        }


